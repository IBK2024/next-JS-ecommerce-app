{
  "name": "next-js-startup-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "pnpm biome check --apply ./src"
  },
  "engines": {
    "node": ">=21.7.1",
    "pnpm": ">=9.0.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm biome lint --apply ./src"
    ],
    "*.{js,jsx,ts,tsx,json,cjs,mjs,md}": [
      "pnpm biome format --write ./src",
      "pnpm biome check --apply ./src"
    ]
  },
  "dependencies": {
    "next": "14.2.2",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.0",
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8",
    "sass": "^1.75.0",
    "sharp": "^0.33.3",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
